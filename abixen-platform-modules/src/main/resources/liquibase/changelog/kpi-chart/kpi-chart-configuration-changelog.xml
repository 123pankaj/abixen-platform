<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd"
        logicalFilePath="liquibase/changelog/kpi-chart/kpi-chart-configuration-changelog.xml">

    <changeSet author="MariuszKumor" id="kpi-chart-configuration-v1">
        <createTable tableName="kpi_chart_configuration">
            <column name="id" type="bigint(19)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by_id" type="bigint(19)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by_id" type="bigint(19)"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="animation_delay" type="int(10)">
                <constraints nullable="false"/>
            </column>
            <column name="animation_duration" type="int(10)">
                <constraints nullable="false"/>
            </column>
            <column name="animation_type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="clockwise" type="boolean(1)">
                <constraints nullable="false"/>
            </column>
            <column name="color_code" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="line_width" type="int(10)">
                <constraints nullable="false"/>
            </column>
            <column name="max_value" type="double(17)">
                <constraints nullable="false"/>
            </column>
            <column name="module_id" type="bigint(19)">
                <constraints nullable="false"/>
            </column>
            <column name="radius" type="int(10)">
                <constraints nullable="false"/>
            </column>
            <column name="responsive" type="boolean(1)">
                <constraints nullable="false"/>
            </column>
            <column name="rounded" type="boolean(1)">
                <constraints nullable="false"/>
            </column>
            <column name="semi" type="boolean(1)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="double(17)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="id" constraintName="pk__kpi_chart_configuration__id"
                       tableName="kpi_chart_configuration"/>

        <addUniqueConstraint columnNames="module_id" constraintName="u__kpi_chart_configuration__module_id"
                             tableName="kpi_chart_configuration"/>

    </changeSet>

</databaseChangeLog>